<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:properties="clr-namespace:CrystalFolders.Properties"
        xmlns:local="clr-namespace:CrystalFolders"
        xmlns:hc="https://handyorg.github.io/handycontrol" x:Class="CrystalFolders.WaitDialog"
        mc:Ignorable="d"
        Title="{x:Static properties:Resources.Applying}" FontFamily="{DynamicResource NotoMusic}" FontSize="11" TextOptions.TextRenderingMode="ClearType" TextOptions.TextFormattingMode="Display" UseLayoutRounding="True" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight" Icon="/Resources/Icon.ico">
    <Grid Width="300" Height="104" VerticalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="{DynamicResource Primary}" FontSize="18" Padding="4,1,0,0" Margin="0,9,0,0" Width="300" TextAlignment="Center" Text="{x:Static properties:Resources.PleaseWait}"/>
        <TextBlock x:Name="Label" HorizontalAlignment="Center" TextWrapping="Wrap" Text="{x:Static properties:Resources.YourFoldersAreBeingCustomized}" VerticalAlignment="Top" Width="300" TextAlignment="Center" Margin="0,41,0,0"/>
        <Border CornerRadius="2.3" HorizontalAlignment="Center" Height="9" Margin="0,71,0,0" VerticalAlignment="Top" Width="116" RenderTransformOrigin="0.5,0.5" Background="{DynamicResource Background}"/>
        <Rectangle HorizontalAlignment="Center" Height="9" Margin="0,71,0,0" Stroke="Black" VerticalAlignment="Top" Width="116" StrokeThickness="0" Fill="{DynamicResource Primary}">
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="Resources/Bar.png"/>
            </Rectangle.OpacityMask>
        </Rectangle>
    </Grid>
</Window>
